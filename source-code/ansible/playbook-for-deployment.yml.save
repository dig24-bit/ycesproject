---
- hosts: all
  become: false

  tasks:
      - name: Stop running container

        command: sudo docker service rm ycesproject
        ignore_errors: yes




      - name: Build new image
        command: sh /home/jenkins/Devops-project/run_container.sh
      
      - name: Run the new Container        
        command: sudo docker service create --replicas 3 -p 80:8083 --name ycesproject 1365890/devops_projects


     

      

     
      

